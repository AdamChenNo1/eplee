{
  "name": "eplee",
  "version": "0.1.2",
  "license": "MIT",
  "description": "Sweat,Simple,Stupid ePub reader",
  "author": "Patel Meru <merupatel123@gmail.com> (janglee123.github.io)",
  "main": "./src/js/main.js",
  "keywords": [],
  "scripts": {
    "start": "electron . file ",
    "pack": "build --dir",
    "dist": "build",
    "dist:linux": "electron-builder --linux",
    "dist:win": "electron-builder --win"
  },
  "build": {
    "appId": "eplee",
    "linux": {
      "target": [
        "deb",
        "pacman"
      ],
      "category": "Accessories"
    },
    "win": {
      "target": "NSIS",
      "icon": "build/icon.ico"
    }
  },
  "devDependencies": {
    "electron": "^4",
    "electron-builder": "^20.38.2"
  },
  "dependencies": {
    "electron-localshortcut": "^3.1.0",
    "epub-cover-extractor": "^1.0.3",
    "nedb": "^1.8.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Janglee123/eplee.git"
  },
  "bugs": {
    "url": "https://github.com/Janglee123/eplee/issues"
  },
  "homepage": "https://github.com/Janglee123/eplee#readme"
}
